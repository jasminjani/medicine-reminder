<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>One Time</title>
  <link rel="stylesheet" href="/css/oneTime.css">
</head>

<body>

  <div class="container">
    <%- include('./navbar.ejs') %>

      <div class="h1">
        <h1>One time only</h1>
      </div>
      <div class="section">
        <form id="form">

          <input type="hidden" name="type" id="type" value="0">

          <div class="outer-div">
            <div class="sub-div">
              <p class="p"><label for="name">medicine name : </label></p>
              <input type="text" class="input validateInput" name="name" id="name" tabindex="1"
                placeholder="      medicine name">
            </div>

            <div class="sub-div">
              <p class="p"><label for="medication_timing">medicine schedule : </label></p>
              <input type="text" class="input" name="medication_timing" id="medication_timing" tabindex="2"
                placeholder="      eg. before lunch">
            </div>
          </div>

          <div class="outer-div">
            <div class="sub-div">
              <p class="p"><label for="start_date">Date : </label></p>
              <input type="date" class="input validateInput" name="start_date" id="start_date" tabindex="3"
                placeholder="      medicine date">
            </div>

            <div class="sub-div">
              <p class="p"><label for="time">Time : </label></p>
              <input type="time" class="input validateInput" name="time" id="time" tabindex="4"
                placeholder="      medicine time">
            </div>
          </div>

          <div class="outer-div">
            <div class="sub-div">
              <p class="p"><label for="description">Description : </label></p>
              <textarea class="textarea" name="description" id="description" tabindex="5" cols="30"
                rows="10"></textarea>
            </div>
          </div>

          <div class="add-medicine-btn">
            <p class="btn p" id="addMedicine" tabindex="6">Add Medicine</p>
          </div>

        </form>
      </div>
  </div>

</body>

<script src="/javascript/oneTime.js"></script>

</html>