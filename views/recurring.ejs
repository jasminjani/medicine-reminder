<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/css/recurring.css">
</head>

<body>

  <div class="container">
    <%- include('./navbar.ejs') %>

    <div class="h1">
      <h1>Recurring</h1>
    </div>
    <div class="section">
      <form id="form">

        <input type="hidden" name="type" id="type" value="1">

        <div class="outer-div">
          <div class="sub-div">
            <p class="p"><label for="recurring_type">Daily/Weekly : </label></p>
            <select class="input validateInput" tabindex="1" name="recurring_type" id="recurring_type"
              onchange="recurringTypeChange(this.value)">
              <option value="daily">Daily</option>
              <option value="weekly">Weekly</option>
            </select>
          </div>

          <div class="sub-div">
            <p class="p"><label for="medication_timing">medicine schedule : </label></p>
            <input type="text" class="input" name="medication_timing" id="medication_timing" tabindex="3"
              placeholder="      eg. before lunch">
          </div>
        </div>

        <div class="outer-div">
          <div class="sub-div">
            <p class="p"><label for="name">medicine name : </label></p>
            <input type="text" class="input validateInput" name="name" id="name" tabindex="2"
              placeholder="      medicine name">
          </div>

          <div class="sub-div">
            <p class="p"><label for="time">Time : </label></p>
            <input type="time" class="input validateInput" name="time" id="time" tabindex="4"
              placeholder="      medicine date">
          </div>
        </div>

        <div class="outer-div">
          <div class="sub-div">
            <p class="p"><label for="start_date">Start Date : </label></p>
            <input type="date" class="input validateInput" name="start_date" id="start_date" tabindex="5"
              placeholder="      medicine start date">
          </div>

          <div class="sub-div">
            <p class="p"><label for="end_date">End Date : </label></p>
            <input type="date" class="input validateInput" name="end_date" id="end_date" tabindex="6"
              placeholder="      medicine end date">
          </div>
        </div>

        <div class="outer-div">
          <div class="sub-div" id="day-dropdown" style="display: none;">
            <div>
              <p class="p"><label for="day">Day : </label></p>
              <select class="input select" tabindex="7" name="day" id="day" multiple>
                <option value="0">Sunday</option>
                <option value="1">Monday</option>
                <option value="2">Tuesday</option>
                <option value="3">Wednedday</option>
                <option value="4">Thursday</option>
                <option value="5">Friday</option>
                <option value="6">Saturday</option>
              </select>
              <p class="note">note : you can select multiple</p>
            </div>
          </div>

          <div class="sub-div">
            <p class="p"><label for="description">Description : </label></p>
            <textarea class="textarea" name="description" id="description" tabindex="8" cols="30" rows="7"></textarea>
          </div>
        </div>

        <div class="add-medicine-btn">
          <p class="btn p" id="addMedicine" tabindex="9">Add Medicine</p>
        </div>

      </form>
    </div>
  </div>


</body>

<script src="/javascript/recurring.js"></script>

</html>